<div class="form-group">
  <label for="" class="control-label col-sm-1">Title</label>
  <div class="col-sm-6">
    {{input class="form-control" placeholder="Dino Comics" value=title}}
  </div>
</div>
<div class="form-group">
  <label for="" class="control-label col-sm-1">URL</label>
  <div class="col-sm-6">
    {{input class="form-control" placeholder="www.qwantz.com" value=url}}
  </div>
</div>
<div class="form-group">
  <label for="" class="control-label col-sm-1">Tag</label>
  <div class="col-sm-6">
    {{input class="form-control" placeholder="funny" value=tag}}
  </div>
  <div class="col-sm-2">
    <button class="btn btn-default" {{action "addLink"}}>Stash Link</button>
  </div>
</div>
