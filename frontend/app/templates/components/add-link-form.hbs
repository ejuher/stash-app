<div class="form-group">
  <label for="" class="control-label col-sm-1">URL</label>
  <div class="col-sm-6">
    {{input class="form-control" placeholder="www.qwantz.com" value=url}}
  </div>
</div>
{{#if urlExists}}
  <div class="form-group">
    <div class="col-sm-6">
      <button type="button" class="btn btn-default tag-emoji" {{action "addLink" "AUDIO"}}>
        🎷
      </button>
      <button type="button" class="btn btn-default tag-emoji" {{action "addLink" "VIDEO"}}>
        📼
      </button>
      <button type="button" class="btn btn-default tag-emoji" {{action "addLink" "ARTICLE"}}>
        📰
      </button>
      <button type="button" class="btn btn-default tag-emoji" {{action "addLink" "EVENT"}}>
        📅
      </button>
      <button type="button" class="btn btn-default tag-emoji" {{action "addLink" "PURCHASE"}}>
        🛒
      </button>
      <button type="button" class="btn btn-default tag-emoji" {{action "addLink" "OTHER"}}>
        💁🏼
      </button>
    </div>
  </div>
{{/if}}
