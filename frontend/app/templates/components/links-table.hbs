<div class="row filter-buttons">
   <div class="col-md-9 col-md-offset-1">
    <button type="button" class="btn btn-default tag-emoji {{if audioActive "active"}}"
     {{action "toggleFilter" "AUDIO"}}>🎷</button>
    <button type="button" class="btn btn-default tag-emoji {{if videoActive "active"}}"
     {{action "toggleFilter" "VIDEO"}}>📼</button>
    <button type="button" class="btn btn-default tag-emoji {{if articleActive "active"}}"
     {{action "toggleFilter" "ARTICLE"}}>📰</button>
    <button type="button" class="btn btn-default tag-emoji {{if eventActive "active"}}"
     {{action "toggleFilter" "EVENT"}}>📅</button>
    <button type="button" class="btn btn-default tag-emoji {{if purchaseActive "active"}}"
     {{action "toggleFilter" "PURCHASE"}}>🛒</button>
    <button type="button" class="btn btn-default tag-emoji {{if otherActive "active"}}"
     {{action "toggleFilter" "OTHER"}}>💁🏼</button>
   </div>
</div>
{{#each filteredSortedLinks as |link|}}
  <hr>
  <a href="{{link.url}}" target="_blank" class="link-row">
    <div class="row">
      <div class="col-sm-1 tag-emoji text-center">{{link.tagEmoji}}</div>
      <div class="col-sm-6 ellipsis">
        <strong>{{link.title}}</strong><br>
        <em>{{link.url}}</em>
      </div>
      {{#if link.hasCreatedAt}}
        <div class="col-sm-2">{{moment-format link.createdAt 'MM-DD-YYYY hh:mm a'}}</div>
      {{/if}}
      <div class="col-sm-1 tag-emoji archive-button text-center">
        <button type="button" class="btn btn-default tag-emoji" {{action "archiveLink" link}}>🗃</button>
      </div>
    </div>
  </a>
{{/each}}
