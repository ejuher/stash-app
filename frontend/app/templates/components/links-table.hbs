<div class="col-md-9">
  <table class="table table-hover">
    <thead>
      <tr>
        <th></th>
        <th>createdAt</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each sortedLinks as |link|}}
        <tr {{action "goToLink" link}}>
          <td><strong>{{link.title}}</strong><br>
              <em>{{link.url}}</em></td>
          <td>{{link.createdAt}}</td>
          <td><i class="glyphicon glyphicon-ok"></i></td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
