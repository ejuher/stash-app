<div class="row filter-buttons">
   <div class="col-md-9 col-md-offset-1">
    <button type="button" class="btn btn-default tag-emoji" {{action "toggleFilter" "AUDIO"}}>🎷</button>
    <button type="button" class="btn btn-default tag-emoji" {{action "toggleFilter" "VIDEO"}}>📼</button>
    <button type="button" class="btn btn-default tag-emoji" {{action "toggleFilter" "ARTICLE"}}>📰</button>
    <button type="button" class="btn btn-default tag-emoji" {{action "toggleFilter" "OTHER"}}>🤷‍</button>
   </div>
</div>
<div class="row">
  <div class="col-md-9">
    <table class="table table-hover">
      <tbody>
        {{#each sortedLinks as |link|}}
          <tr {{action "goToLink" link}}>
            <td class="tag-emoji">{{link.tagEmoji}}</td>
            <td><strong>{{link.title}}</strong><br>
                <em>{{link.url}}</em></td>
            <td>{{moment-format link.createdAt 'MM-DD-YYYY hh:mm a'}}</td>
            <td><i class="glyphicon glyphicon-ok"></i></td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
